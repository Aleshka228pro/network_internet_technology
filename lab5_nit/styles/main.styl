back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
  padding: size + "%"
  margin 0 0 1% 0

link-design()
  color #0066cc
  text-decoration none
  float right

  &:hover
    text-decoration underline

colorText = #6f6d6d

html
  color colorText



.nav-header
    display flex
    justify-content space-between
    align-items center
    padding 1%
    background white
    back(0)

    &__title
        font-size 1.5em
        font-weight bold
        color #2c3e50
        margin 0 0 0 1%

    nav
        display flex
        gap 2px

        a
            display inline-block
            padding 10px 15px
            color #333
            text-decoration none
            border-radius 7px

            &:hover,
            &.active
                background-color rgb(2, 96, 184)
                color #f8f8f8

.gallery
    display grid
    grid-template-columns 50% 25% 25%   
    grid-template-rows 250px 
    back(0)            
    width 98%
    margin 20px auto
    padding 1%
    overflow hidden

    &__item
        overflow hidden
        position relative
        cursor pointer

        img
            width 100%
            height 100%
            object-fit cover

        &:hover img
            transform scale(1.05)

    &__column
        display grid
        grid-template-rows 1fr 1fr
        height 100%


.main-course
    display flex
    gap 20px
    margin 30px auto
    width 95%

    &__article
        width 70%
        back(0)
        padding 5px
        border-radius 8px

    &__aside
        width 28%
        back(0)
        padding 5px
        border-radius 8px

    .article-section
        margin-bottom 20px
        border-bottom 1px solid #eee
        padding-bottom 15px

        &:last-child
            border-bottom none

        &__title
            text-align center
            color #333
            font-size 1.1em
            margin 10px 0

        &__content
            overflow hidden  // для float

        &__image
            height 200px
            object-fit cover
            margin 10px
            border-radius 5px

            &--right
                float right
                margin-left 20px
                width 50%

            &--left
                float left
                margin-right 20px
                width 25%

        &__text
            text-align justify
            font-size 1.1em
            margin 0 10px

        &__link
            margin-top 10px
            link-design()
            &--left
                float left
            
            
    .aside-card
        display flex
        flex-direction row-reverse
        gap 10px
        margin-bottom 15px
        padding-bottom 10px
        border-bottom 2px solid #c2c1c1

        &:last-child
            border-bottom none
            padding-bottom 0

        &__info
            flex: 1 // только с этим картинка 50% почему то 

        &__image
            width 50%                
            height 150px             
            border-radius 5px
            object-fit cover         

        &__title
            font-weight bold
            text-align right
            margin 0 0 5px 0

        &__description
            margin 0 0 5px 0

        &__link
            link-design()


img.big
  display block
  width 30%
  height auto
  margin auto

section.section-album
  display flex
  justify-content space-between
  width 99%
  
  p
    flex 1

@media (max-width: 767px)
    .main-course
        flex-direction column

        &__article,
        &__aside
            width 100%

    .article-section
        &__image
            width 100%
            float none
            margin 0 0 15px 0

            &--right,
            &--left
                float none
                margin 0 0 15px 0

    .aside-card
        flex-direction column        
        &__image
            width 100%
            height auto              

    .gallery
        display flex
        flex-direction column
        height auto

        &__item
            width 100%
            height auto

            img
                height auto
                width 100%

        &__column
            display flex
            flex-direction column
            gap 2px

    img.big 
        width 95%
        margin auto
    
    section.section-album
        display block



footer 
    width 100%
    padding 1px
    font-size 1.2em
    background #E3E3E3
    color #164B69
    text-align center


.table-page
    margin 0 auto
    font-size 1.15em

    &__sort,
    &__filters,
    &__chart
        back(0)
        width 98%
        margin 15px auto
        padding 15px

    &__table
        width 100%
        border-collapse collapse
        margin 20px 0
        background white
        
    .data-table
        &__head
            background #f0f0f0
            font-weight bold
            
        &__row
            border-bottom 1px solid #ddd
            
            &:hover
                background #f9f9f9
                
        &__cell
            padding 10px
            text-align left
